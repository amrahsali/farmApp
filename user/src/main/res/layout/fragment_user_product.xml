<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".User_productFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginEnd="20sp"
                android:id="@+id/cvStories"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="50dp"
                >
                <ImageView
                    android:id="@+id/product_profile_img"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/circle_bg"
                    android:src="@drawable/man" />

            </androidx.cardview.widget.CardView>



            <TextView
                android:id="@+id/product_profile_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Abdullahi"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp" />





            <androidx.cardview.widget.CardView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/to_notification"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:tint="@color/green"
                    android:src="@drawable/ic_round_notifications_24" />

            </androidx.cardview.widget.CardView>




        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <EditText
                android:paddingStart="12dp"
                android:drawableStart="@drawable/ic_round_search_24"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:background="@null"
                android:text="@string/search_here"
                android:textAlignment="center" />
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/categories"
            android:textSize="18sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="10dp"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollIndicators="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/all_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/boarder_bg"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="5dp"
                    android:text="all"
                    android:textSize="13sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/vegies"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/boarder_bg"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="5dp"
                    android:text="vegetable"
                    android:textSize="13sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/fruit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/boarder_bg"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="5dp"
                    android:text="fruits"
                    android:textSize="13sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/grain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/boarder_bg"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="5dp"
                    android:text="grains"
                    android:textSize="13sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tuber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/boarder_bg"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="5dp"
                    android:text="tubers"
                    android:textSize="13sp"
                    android:textStyle="bold" />



            </LinearLayout>

        </HorizontalScrollView>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvNumbers"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </RelativeLayout>



    </LinearLayout>

</ScrollView>